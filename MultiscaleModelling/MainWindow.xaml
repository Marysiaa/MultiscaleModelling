<Window x:Class="MultiscaleModelling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiscaleModelling"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900">

    <Border Padding="10">
        <StackPanel>
            <Grid RenderTransformOrigin="0.582,4.753">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- PROPERTIES -->
                <StackPanel Grid.Column="0" Height="550">
                    <TextBlock Text="Properties" FontWeight="Bold" Margin="10"></TextBlock>

                    <!-- CLASS 1 -->
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Number of grains" />
                        <TextBox Grid.Column="1" Text="10" x:Name="NumberOfGrainsTextBox" Padding="5"/>
                    </Grid>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Neighbourhood type"/>
                        <StackPanel Grid.Column="1" Margin="5">
                            <RadioButton x:Name="NeumannRadioButton" Margin="2" IsChecked="false">Von Neumann</RadioButton>
                            <RadioButton x:Name="MooreRadioButton" Margin="2" IsChecked="true">Moore</RadioButton>
                        </StackPanel>
                    </Grid>

                    <!-- CLASS 3 -->                    
                    <StackPanel Height="220">
                        
                    </StackPanel>

                    <!-- START -->
                    <Grid Margin="15">
                        <Button x:Name="StartButton" Click="StartButton_Click" Background="Beige" Width="120" Height="40">Start simulation</Button>
                    </Grid>

                    <!-- CLASS 2 -->
                    <Grid Margin="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    <!-- SAVE FILE -->
                        <StackPanel Grid.Column="0">
                            <Button x:Name="SaveTxtButton" Click="SaveTxtButton_Click"  Background="Beige"  Width="120" Height="20">Save txt file</Button>
                            <Button x:Name="SaveBitmapButton" Click="SaveBitmapButton_Click"  Background="Beige"  Width="120" Height="20">Save bitmap</Button>
                        </StackPanel>
                    <!-- READ FILE -->
                        <StackPanel Grid.Column="1">
                            <Label Content="File name to upload"  Width="120"/>
                            <TextBox Text="" x:Name="ReadFileNameTextBox" Padding="5" Width="120"/>
                        </StackPanel>
                        <StackPanel  Grid.Column="2">
                            <Button x:Name="ReadTxtButton" Click="ReadTxtButton_Click"  Background="Beige"  Width="120" Height="20">Read txt file</Button>
                            <Button x:Name="ReadBitmapButton" Click="ReadBitmapButton_Click"  Background="Beige"  Width="120" Height="20">Read bitmap</Button>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="15">
                        <Label x:Name="ResultLabel" Height="30"></Label>
                    </Grid>

                </StackPanel>

                <!-- IMAGE -->
                <StackPanel Grid.Column="1">
                    <Image x:Name="StructureImage" Height="302" Width="302" Margin="10"/>
                </StackPanel>
            </Grid>
        </StackPanel>

    </Border>
</Window>
